#include<iostream>
#include<string>

using namespace std;
int main()
{
	string relement="r ";
	string belement="b ";
	string gelement="g ";
	string blank="* ";
	string matrix[10][10]; 
        int i,j,N=0;	
	cin >> N;
	cout <<endl;
	for (i=0;i<=N+1;i++)
	{
		for (j=0;j<=N+1;j++)
		{
			if((i+j)==N)
			{
				matrix[i][j]=relement;
			}
			else if((i+j)==(N+1))
			{
				if(j%2==0)
				{
					matrix[i][j]=belement;
				}
				else
				{
					matrix[i][j]=gelement;
				}
			}
			else 
			{
				matrix[i][j]=blank;
			}
		}
	}
	for(i=N+1;i>=0;i--)
	{
		for(j=0;j<=N+1;j++)
		{
			cout<<matrix[i][j];
		}
		cout<<endl;
	}
	return 0;
}	
